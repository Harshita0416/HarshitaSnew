package VariableDemo;

import java.util.Scanner;
public class YearDay{
public static void main(String[]args){
double MinYear=60*24*365; //60minutes24hours365days
Scanner input = new Scanner(System.in);
System.out.print("type the number of minutes: ");
double min = input.nextDouble();
long years = (long)(min/MinYear);
int days = (int)(min/60/24)%365;
System.out.println((int)min+"minutes = "+years+"years "+days+"days");
}
}
